{
  "include": ["src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true
  },
  "exclude": ["node_modules", "test", "dist"]
}
